{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"baseUrl": "./",
		"paths": {
			"@server/*": ["./src/*"],
			"@client/*": ["../hosting/src/*"],
			"@config/*": ["../config/base/*"],
		},
	},
	"include": [
		"./src",
	],
}
